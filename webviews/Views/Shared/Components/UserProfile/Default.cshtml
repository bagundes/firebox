@model webviews.Models.Administration.UserModel;
@{
 var host = Context.Request.Host; //+ Context.Request.Path; 
}


<div class="user-profile" style="background: url(/assets/images/background/user-info.jpg) no-repeat;">
    @** User profile image **@
    <div class="profile-img"> <img src="~/images/users/@Model.Picture" alt="user" /> </div>
    @** User profile text**@
    <div class="profile-text"> <a href="#" class="dropdown-toggle u-dropdown" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">@Model.FullName</a>
        <div class="dropdown-menu animated flipInY">
            <a href="#" class="dropdown-item"><i class="ti-user"></i> Meus Dados</a>
            <a href="#" class="dropdown-item"><i class="ti-wallet"></i> Balanço</a>
            <a href="#" class="dropdown-item"><i class="ti-email"></i> Caixa de entrada</a>
            <div class="dropdown-divider"></div> <a href="#" class="dropdown-item"><i class="ti-settings"></i> Configurações</a>
            <div class="dropdown-divider"></div> <a href="login.html" class="dropdown-item"><i class="fa fa-power-off"></i> Sair</a>
        </div>
    </div>
</div>